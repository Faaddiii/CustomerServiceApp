@model CustomerServiceApp.Models.Company

@{
    ViewData["Title"] = "Details";
    Layout = "_DashboardLayout";
}

<h1>Company Details</h1>


<div class="card">
    <div class="card-header">
        <h4>Company Information</h4>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-sm-6">
                <dt>@Html.DisplayNameFor(model => model.CompanyName)</dt>
                <dd>@Html.DisplayFor(model => model.CompanyName)</dd>
            </div>
            <div class="col-sm-6">
                <dt>@Html.DisplayNameFor(model => model.Address)</dt>
                <dd>@Html.DisplayFor(model => model.Address)</dd>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-6">
                <dt>@Html.DisplayNameFor(model => model.City)</dt>
                <dd>@Html.DisplayFor(model => model.City)</dd>
            </div>
            <div class="col-sm-6">
                <dt>@Html.DisplayNameFor(model => model.State)</dt>
                <dd>@Html.DisplayFor(model => model.State)</dd>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-6">
                <dt>@Html.DisplayNameFor(model => model.ZipCode)</dt>
                <dd>@Html.DisplayFor(model => model.ZipCode)</dd>
            </div>
            <div class="col-sm-6">
                <dt>@Html.DisplayNameFor(model => model.County)</dt>
                <dd>@Html.DisplayFor(model => model.County)</dd>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-6">
                <dt>@Html.DisplayNameFor(model => model.Description)</dt>
                <dd>@Html.DisplayFor(model => model.Description)</dd>
            </div>
            <div class="col-sm-6">
                <dt>@Html.DisplayNameFor(model => model.WebsiteURL)</dt>
                <dd><a href="@Model.WebsiteURL" target="_blank">@Html.DisplayFor(model => model.WebsiteURL)</a></dd>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-6">
                <dt>@Html.DisplayNameFor(model => model.Telephone)</dt>
                <dd>@Html.DisplayFor(model => model.Telephone)</dd>
            </div>
            <div class="col-sm-6">
                <dt>@Html.DisplayNameFor(model => model.Fax)</dt>
                <dd>@Html.DisplayFor(model => model.Fax)</dd>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-6">
                <dt>@Html.DisplayNameFor(model => model.YourName)</dt>
                <dd>@Html.DisplayFor(model => model.YourName)</dd>
            </div>
            <div class="col-sm-6">
                <dt>@Html.DisplayNameFor(model => model.Title)</dt>
                <dd>@Html.DisplayFor(model => model.Title)</dd>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-6">
                <dt>@Html.DisplayNameFor(model => model.AddressAtCompany)</dt>
                <dd>@Html.DisplayFor(model => model.AddressAtCompany)</dd>
            </div>
            <div class="col-sm-6">
                <dt>@Html.DisplayNameFor(model => model.AddressLine2)</dt>
                <dd>@Html.DisplayFor(model => model.AddressLine2)</dd>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-6">
                <dt>@Html.DisplayNameFor(model => model.UserCity)</dt>
                <dd>@Html.DisplayFor(model => model.UserCity)</dd>
            </div>
            <div class="col-sm-6">
                <dt>@Html.DisplayNameFor(model => model.UserState)</dt>
                <dd>@Html.DisplayFor(model => model.UserState)</dd>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-6">
                <dt>@Html.DisplayNameFor(model => model.UserPostalCode)</dt>
                <dd>@Html.DisplayFor(model => model.UserPostalCode)</dd>
            </div>
            <div class="col-sm-6">
                <dt>@Html.DisplayNameFor(model => model.Country)</dt>
                <dd>@Html.DisplayFor(model => model.Country)</dd>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-6">
                <dt>@Html.DisplayNameFor(model => model.EmailAddress)</dt>
                <dd>@Html.DisplayFor(model => model.EmailAddress)</dd>
            </div>
            <div class="col-sm-6">
                <dt>@Html.DisplayNameFor(model => model.Password)</dt>
                <dd>@Html.DisplayFor(model => model.Password)</dd>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-6">
                <dt>@Html.DisplayNameFor(model => model.ConfirmPassword)</dt>
                <dd>@Html.DisplayFor(model => model.ConfirmPassword)</dd>
            </div>
            <div class="col-sm-6">
                <dt>@Html.DisplayNameFor(model => model.DayTelephone)</dt>
                <dd>@Html.DisplayFor(model => model.DayTelephone)</dd>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-6">
                <dt>@Html.DisplayNameFor(model => model.FaxNumber)</dt>
                <dd>@Html.DisplayFor(model => model.FaxNumber)</dd>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.CompanyID">Edit</a>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </div>
</div>
