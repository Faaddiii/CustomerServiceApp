@model IEnumerable<CustomerServiceApp.ViewModels.PostReviewViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container mt-4">
    <!-- Search Bar -->
    <div class="row mb-3">
        <div class="col-md-12">
            <input type="text" class="form-control" placeholder="Search reviews..." id="reviewSearch" />
        </div>
    </div>

    <!-- Sort and Filter Options -->
    <div class="row mb-4">
        <div class="col-md-6">
            <select class="form-control" id="sortReviews">
                <option>Most Recent</option>
                <option>Oldest First</option>
            </select>
        </div>
        <div class="col-md-6">
            <select class="form-control" id="filterByStars">
                <option>All Stars</option>
                <option>5 stars</option>
                <option>4 stars</option>
                <option>3 stars</option>
                <option>2 stars</option>
                <option>1 star</option>
            </select>
        </div>
    </div>

    <!-- Review List -->
    @foreach (var review in Model)
    {
        <div class="card mb-4">
            <div class="card-body">
                <!-- Review Title -->
                <h5 class="card-title">@review.Title</h5>

                <!-- Rating and Date -->
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <div>
                        @for (var i = 0; i < review.OverallRating; i++)
                        {
                            <span class="fa fa-star text-warning"></span>
                        }
                        @for (var i = review.OverallRating; i < 5; i++)
                        {
                            <span class="fa fa-star-o text-muted"></span>
                        }
                    </div>
                    <div>
                        <small class="text-muted">@review.CreatedAt.ToString("MMMM d, yyyy")</small>
                    </div>
                </div>

                <!-- Review Content -->
                <p>@review.Comments</p>

                <!-- Reviewer Info -->
                <div class="d-flex align-items-center">
                    <i class="fa fa-user"></i>
                    <div>
                        <strong>@review.Name</strong>
                        <br />
                        <small class="text-muted">@review.Email</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
